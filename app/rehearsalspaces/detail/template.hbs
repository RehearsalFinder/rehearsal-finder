{{!-- Detail --}}
<div class="section">
  <div class="container">

    <div class="detail">
      {{!-- Info --}}
      <div class="detail__info">
        <div class="detail__info--heading">
          <h2>{{model.name}}</h2>
          <h4>{{model.location}}</h4>
        </div>

        <div class="detail__info--space">
          <h3>The Space</h3>
          <p>{{model.description}}</p>
        </div>

        <div class="detail__info--rules">
          <h3>Rules</h3>
          <p>{{model.rules}}</p>
        </div>

        <div class="detail__info--perks">

{{!-- REHEARSAL SPACES LIST ROUTE --}}
<div class="page">
  <div class="page__left">
    <div class="section section--spaces">
      <div class="container">
        <div class="grid">

          {{#each model as |space|}}
            {{#link-to 'rehearsalspaces.detail' rehearsalspaces.id}}
              {{#space-card name=space.name city=space.city state=space.state costPerHour=space.costPerHour}}{{/space-card}}
            {{/link-to}}
          {{/each}}

        </div>
      </div>
    </div>
  </div>

  <div class="page__right">
    {{#leaflet-map lat=lat lng=lng zoom=zoom}}
      {{tile-layer url="http://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}

      {{#marker-layer location=diamondSound}}
        {{#popup-layer}}
          <h3>Diamond Sound Studios</h3>
        {{/popup-layer}}
      {{/marker-layer}}

      {{#marker-layer location=inkBuilding}}
        {{#popup-layer}}
          <h3>Ink Building</h3>
        {{/popup-layer}}
      {{/marker-layer}}

    {{/leaflet-map}}
  </div>
</div>
